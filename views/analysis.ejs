<!DOCTYPE html>
<html lang="en-US">
    <head>
        <link rel="stylesheet" href="style.css">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Kanit&display=swap" rel="stylesheet">
    </head>
<body>

    <div class="grid" id="gridtr">
        <h1 id="main-title">Money Manager</h1>  
    </div>
    <header class="header" id="header">
        <nav class="navbar" id="navbar">
            <a href="/" class=" navtabs">Records</a>
            <a href="/analysis" class="acnav">Analysis</a>
            <a href="/budgets" class="navtabs">Budgets</a>
            <a href="/register" class="navtabs">Signup</a>
            <a href="/login" class="navtabs">Login</a>
        </nav>

<div id="piechart" style="width: 100%; height: 500px;"></div>
<div>
    <div id="groceryE" style="display: none;">{{%groceryE%}}</div>
    <div id="medicalE" style="display: none;">{{%medicalE%}}</div>
    <div id="petrolE" style="display: none;">{{%petrolE%}}</div>
    <div id="rentE" style="display: none;">{{%rentE%}}</div>
    <div id="stationaryE" style="display: none;">{{%stationaryE%}}</div>
    <div id="miscelleneousE" style="display: none;">{{%miscelleneousE%}}</div>
</div>

<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>

<script type="text/javascript">
// Load google charts
google.charts.load('current', {'packages':['corechart']});
google.charts.setOnLoadCallback(drawChart);

// Draw the chart and set the chart values
function drawChart() {
    var groceryE=document.getElementById('groceryE').innerHTML;
    var rentE=document.getElementById('rentE').innerHTML;
    var medicalE=document.getElementById('medicalE').innerHTML;
    var stationaryE=document.getElementById('stationaryE').innerHTML;
    var miscellaneousE=document.getElementById('miscelleneousE').innerHTML;
    var petrolE=document.getElementById('petrolE').innerHTML;

  var data = google.visualization.arrayToDataTable([
  ['Task', 'Hours per Day'],
  ['Grocery', Number(groceryE)],
  ['Medical', Number(medicalE)],
  ['Rent', Number(rentE)],
  ['Stationary', Number(stationaryE)],
  ['Miscellaneous', Number(miscellaneousE)],
  ['Petrol',Number(petrolE)]
]);

  // Optional; add a title and set the width and height of the chart
  var options = {'title':"Your Spending's Distribution", is3D: true,};

  // Display the chart inside the <div> element with id="piechart"
  var chart = new google.visualization.PieChart(document.getElementById('piechart'));
  chart.draw(data, options);
}
</script>

</body>
</html>
