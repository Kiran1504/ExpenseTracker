                            <div class="showred"><b>{{%AMOUNT%}}</b></div></div>
                            <div class="dow"><span class="date">{{%DATE%}}</span>
                                <input type="text" value="{{%BUTTON%}}" name="deleteid" style="display: none;">
                                <button type="submit" class="delete-button">Delete</button>
                            </div>
                        </form>
                    </div>
                </li>
