        </div>
        <form action="/clearall" method="post">
        <button type="submit" class="clear" id="clear" onclick="clearing()">Clear</button></form>
        </div>

    </div>
    <div class="accbalance" id="accbalance">
        <h3>5000</h3>
    </div>
    <div class="finalbalance" id="finalbalance">
        <h3>5000</h3>
    </div>
    <script src="home_script.js"></script>

